import time
from datetime import datetime, timedelta

# Задайте дату, до которой нужно отсчитывать время
target_date = datetime(2025, 12, 31, 23, 59, 59)

while True:
    # Получаем текущее время
    current_time = datetime.now()
    
    # Вычисляем оставшееся время
    remaining_time = target_date - current_time
    
    # Проверяем, не истек ли срок
    if remaining_time.total_seconds() <= 0:
        print("Время вышло!")
        break

    # Выводим оставшееся время
    days, seconds = remaining_time.days, remaining_time.seconds
    hours = seconds // 3600
    minutes = (seconds % 3600) // 60
    seconds = seconds % 60

    print(f"Осталось времени: {days} дней, {hours} часов, {minutes} минут, {seconds} секунд", end='\r')
    
    # Обновляем каждую секунду
    time.sleep(1)
